using System;
using System.Data.SQLite;

namespace MathProblemSolver
{
    class Program
    {
        static void Main(string[] args)
        {
            // Function to solve the math problem (addition in this case)
            int SolveMathProblem(int a, int b)
            {
                return a + b;
            }

            Console.Write("Enter the first number: ");
            int num1 = int.Parse(Console.ReadLine());

            Console.Write("Enter the second number: ");
            int num2 = int.Parse(Console.ReadLine());

            // Solve the math problem
            int solution = SolveMathProblem(num1, num2);
            Console.WriteLine("Solution: " + solution);

            // Connect to the database (or create it if it doesn't exist)
            using (var conn = new SQLiteConnection("Data Source=math_solutions.db;Version=3;"))
            {
                conn.Open();

                // Create a table to store solutions if it doesn't exist
                using (var cmd = new SQLiteCommand("CREATE TABLE IF NOT EXISTS solutions (id INTEGER PRIMARY KEY, num1 INT, num2 INT, solution INT)", conn))
                {
                    cmd.ExecuteNonQuery();
                }

                // Insert the solution into the database
                using (var cmd = new SQLiteCommand("INSERT INTO solutions (num1, num2, solution) VALUES (@num1, @num2, @solution)", conn))
                {
                    cmd.Parameters.AddWithValue("@num1", num1);
                    cmd.Parameters.AddWithValue("@num2", num2);
                    cmd.Parameters.AddWithValue("@solution", solution);

                    cmd.ExecuteNonQuery();
                }

                Console.WriteLine("Solution saved to the database.");
            }
        }
    }
}
